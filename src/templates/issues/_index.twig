{% extends 'osim-focus/layouts/_index' %}

{% set selectedSubnavItem = 'issues' %}

{% set elementType = 'osim\\craft\\focus\\elements\\Issue' %}

{% if pageId %}
    {% set crumbs = [
        { label: craft.osimFocus.name, url: url('osim-focus') },
        { label: 'Pages'|t('osim-focus'), url: url('osim-focus/pages') },
    ] %}
{% else %}
    {% set crumbs = [
        { label: craft.osimFocus.name, url: url('osim-focus') },
    ] %}
{% endif %}

{% js %}
    window.osimFocusPageId = '{{pageId|e('js')}}';
    window.osimFocusProjectId = '{{projectId|e('js')}}';
    window.osimFocusViewportId = '{{viewportId|e('js')}}';
{% endjs %}
